# zmodload zsh/zprof
zs_set_path=1
export FZF_MARKS_FILE=${HOME}/.config/fzf-marks
export NVM_LAZY_LOAD=true
export NVM_LAZY_LOAD_EXTRA_COMMANDS=('nvim')

source /usr/share/autoenv-git/activate.sh
source <(zoxide init zsh)

autoload -U colors && colors
unalias run-help
autoload run-help

source '/usr/share/zsh-antidote/antidote.zsh'
zstyle ':antidote:bundle' use-friendly-names 'yes'
export ANTIDOTE_HOME=$XDG_DATA_HOME/antidote
antidote load


setopt append_history         # append history list so all shell share the same hist
setopt extended_history       # record timestamp of command in HISTFILE
setopt hist_expire_dups_first # delete duplicates first when HISTFILE size exceeds HISTSIZE
setopt hist_ignore_dups       # ignore duplicated commands history list
setopt hist_ignore_space      # ignore commands that start with space
setopt hist_verify            # show command with history expansion to user before running it
setopt share_history          # share command history data

run-compinit
export KEYTIMEOUT=40
VI_MODE_RESET_PROMPT_ON_MODE_CHANGE=true
VI_MODE_SET_CURSOR=true

source <(starship init zsh)
# eval "$(_PIO_COMPLETE=zsh_source pio)"
# zprof
