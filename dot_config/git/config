# vim: ft=gitconfig
[user]
	name = Apipoo Paleeya
	email = tleoutline@gmail.com
[core]
	editor = nvim
[merge]
  tool = diffview
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "diffview"]
  cmd = nvim -n -c "DiffviewOpen" "$MERGE"
[pull]
	rebase = true
[init]
	defaultBranch = main
[filter "ageencrypt"]
	smudge = age -d -i ~/.config/age/key.txt -
	clean = ~/.config/git/scripts/git_filter_age_clean %f
	required = true
[diff "ageencrypt"]
	# prevent git diff from treating encrypted files as binary
	textconv = cat

[diff "chezmoi-age"]
	textconv = ~/.config/git/scripts/git_decrypt_age
