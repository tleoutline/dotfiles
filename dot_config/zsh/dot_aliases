alias l='lsd --group-dirs=first'
alias ls='lsd --almost-all --group-dirs=first'
alias ll='lsd --long --group-dirs=first'
alias la='lsd --long --almost-all --group-dirs=first'

alias llm='lsd --timesort --long --group-dirs=first'
alias lS='lsd --oneline --classic --group-dirs=first'

